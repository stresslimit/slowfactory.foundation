<article class="open-edu-course row valign-top">
    <div class="video half"><iframe title="vimeo-player" src="https://player.vimeo.com/video/{{ course.vimeo_id }}?title=0&byline=0&portrait=0" width="100%" height="300" frameborder="0" allowfullscreen></iframe></div>
    <div class="info half">
        <h1 class="title-sm">{{course.title}}</h1>
        <div class="series">{{course.series}}</div>
        <p class="description">{{course.description}}</p>
        <div class="instructor">{{course.instructor}}</div>
    </div>
    <div class="grow">
        <hr />
    </div>
</article>