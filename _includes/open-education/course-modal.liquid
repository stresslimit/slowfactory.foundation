<div id="{{include.id}}" class="modal modal-classe" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <article class="modal-content">
      <div class="modal-header">
        <button class="modal-close" type="button" data-close aria-label="Close">
          <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        </button>
        <h1 class="modal-title title-sm">{{ include.series_name }}</h1>
        <p class="text-xs">Series</p>
      </div>
      <h1 class="title-md">{{ include.title }}</h1>
      <p class="text-md">{{ include.description }}</p>
      {% if include.instructor %}
        <div class="flex">
          {% if include.instructor.photo_bw and include.instructor.photo_bw != '' %}
          <img class="open-education-2021-classes__instructor-photo" src="{{ 'images/open-education/instructors/' | append: include.instructor.photo_bw | asset_url }}">
          {% endif %}
          <p>by {{ include.instructor.name }}</p>
        </div>
        <p class="text-sm">{{ instructor.bio }}
      {% endif %}

      <div class="text-center">
        {% include components/button.liquid data-toggle="modal-register" text="Register for the class" %}
      </div>
    </article>
  </div>
</div>
