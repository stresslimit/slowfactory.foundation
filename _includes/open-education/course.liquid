<article class="open-edu-course row valign-top">
  <div class="half"><p class="video-container"><iframe title="vimeo-player" src="https://player.vimeo.com/video/{{ course.vimeo_id }}?title=0&byline=0&portrait=0" width="560" height="315" frameborder="0" allowfullscreen></iframe></p></div>
  <div class="half">
    <h1 class="title-sm">{{course.title}}</h1>
    <div class="series">{{course.series}}</div>
    <p class="description">{{course.description}}</p>
    <p class="instructor">{{course.instructor}}</p>
    {% if course.logo %}
      <p>in partnership with </p>
      <p><img src="{{ 'images/logos/' | append: course.logo | asset_url }}" style="max-width:12rem"></p>
    {% endif %}
  </div>
  <div class="grow">
    <hr />
  </div>
</article>
